#if !defined __PG_CSTDDEF_
# define __PG_CSTDDEF_ 20210908L

# include "pg.h"
# include <stddef.h>
	
# if defined __PG_HAS_NAMESPACES

namespace std
{
	using ::ptrdiff_t;
	using ::size_t;
	using nullptr_t = decltype(nullptr);
	using max_align_t = long double;
		
} // namespace std

